<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/black"
            android:layout_centerInParent="true"
            android:id="@+id/livestream_progress"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:id="@+id/livestream_watch"
            android:text="@string/watch_live_on_youtube"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:alpha="0"/>

    <LinearLayout
        android:id="@+id/livestream_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/livestream_sundays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/sunday_night"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/livestream_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/the_5_the_7"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>
    </RelativeLayout>